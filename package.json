{
	"name": "revel-frontend",
	"version": "1.28.2",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"generate:api": "node scripts/generate-api-client.js",
		"paraglide:compile": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide",
		"i18n:validate": "node scripts/validate-translations.js",
		"i18n:check-imports": "bash scripts/check-i18n-imports.sh",
		"i18n:compile": "pnpm paraglide:compile && pnpm i18n:validate"
	},
	"devDependencies": {
		"@hey-api/openapi-ts": "^0.85.2",
		"@inlang/paraglide-js": "^2.4.0",
		"@lucide/svelte": "^0.482.0",
		"@playwright/test": "^1.49.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/jest-dom": "^6",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.10.2",
		"@types/qrcode": "^1.5.5",
		"@types/testing-library__jest-dom": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.8.0",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"jsdom": "^27.0.0",
		"postcss": "^8.4.49",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"svelte": "^5.0.0",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.46.3",
		"vite": "^6.0.3",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@tanstack/svelte-query": "^6.0.3",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"heic2any": "^0.0.4",
		"html5-qrcode": "^2.3.8",
		"lucide-svelte": "^0.469.0",
		"marked": "^17.0.1",
		"mode-watcher": "^0.4.1",
		"qrcode": "^1.5.4",
		"svelte-crop-window": "^0.1.1",
		"svelte-dnd-action": "^0.9.69",
		"svelte-sonner": "^1.0.5",
		"sveltekit-superforms": "^2.28.1",
		"tailwind-merge": "^2.5.5",
		"tailwind-variants": "^0.2.1",
		"zod": "^3.24.1"
	},
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"packageManager": "pnpm@9.15.0",
	"pnpm": {
		"patchedDependencies": {
			"svelte-crop-window@0.1.1": "patches/svelte-crop-window@0.1.1.patch"
		}
	}
}
